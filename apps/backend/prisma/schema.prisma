generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id         String   @id @default(uuid())
    createdAt  DateTime @default(now())
    updatedAt  DateTime @updatedAt
    email      String   @unique
    firstName  String
    middleName String?
    lastName   String?
    password   String
    role       Role
}

enum Role {
    ADMIN
    USER
}
